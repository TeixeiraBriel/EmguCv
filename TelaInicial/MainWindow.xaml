<Window x:Class="Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Resultado" Name="TextoResultado1" FontSize="30" FontWeight="Bold" Visibility="Collapsed"/>
            <Button x:Name="btnLogar" Content="Logar" Click="btnLogar_Click" Width="100" Height="50"/>
            <Button x:Name="btnJogar" Content="Iniciar" Click="btnJogar_Click" Width="100" Height="50"/>
            <RadioButton x:Name="btnVender" Content="Vender?"/>
            <RadioButton x:Name="btnAltTab" Content="Alt+Tab?"/>
        </StackPanel>
    </Grid>
</Window>
